<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent"
  android:layout_height="wrap_content"
  android:padding="10dip">
<ImageView 
	android:id="@+id/lvAlbumArt" 
	android:layout_width="70dip" 
	android:layout_height="70dip"
	android:background="#7A7A7A">
	</ImageView>
<TextView 
	android:text="@+id/TextView01" 
	android:id="@+id/lvMetaTitle" 
	android:layout_width="wrap_content" 
	android:layout_height="wrap_content"
	android:layout_toRightOf="@+id/lvAlbumArt"
	android:textAppearance="?android:attr/textAppearanceMedium"
	android:textStyle="bold"
	android:paddingLeft="10dip"
	android:singleLine="true"
	android:ellipsize="end">
	</TextView>
<TextView 
	android:text="@+id/TextView02" 
	android:id="@+id/lvMetaAlbum" 
	android:layout_width="wrap_content" 
	android:layout_height="wrap_content"
	android:layout_toRightOf="@+id/lvAlbumArt"
	android:layout_below="@+id/lvMetaTitle"
	android:paddingLeft="10dip"
	android:paddingTop="5dip"
	android:singleLine="true"
	android:ellipsize="end">
	</TextView>
<TextView 
	android:text="@+id/TextView03"
	android:id="@+id/lvMetaArtist" 
	android:layout_width="wrap_content" 
	android:layout_height="wrap_content"
	android:layout_toRightOf="@+id/lvAlbumArt" 
	android:layout_below="@+id/lvMetaAlbum"
	android:textStyle="italic"
	android:paddingLeft="10dip"
	android:singleLine="true"
	android:ellipsize="end">
	</TextView>
</RelativeLayout>
